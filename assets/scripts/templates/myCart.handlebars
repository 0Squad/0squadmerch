<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
  {{#each items as |item|}}
    <tr>
      <td>{{item.name}}</td>
      <td>{{item.description}}</td>
      <td>{{item.price}}</td>
      <td>{{item.quantity}}</td>
      <td>
        <button class="btn btn-primary item-edit" data-id="{{item._id}}" >Edit</button>
        <button class="btn btn-danger item-delete" data-id="{{item._id}}">Delete</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<h5>Total is: {{total}}</h5>
