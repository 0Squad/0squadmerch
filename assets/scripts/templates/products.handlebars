{{#each products as |product|}}
<div class="productWindow hover12 column">
  <ul class="products">
    <li><figure><img src="{{product.img}}" alt="picture" style="width:200px;height:200px;" class="show-product" data-id={{product._id}} onclick="" data-toggle="modal" data-target="#myProductModal"></figure></li>
    <li>{{product.name}}</li>
    <li>${{product.price}}.00</li>
  </ul>
</div>

{{/each}}
